<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deg_dra_menu"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".BluetoothActivity">

    <Button
        android:id="@+id/BtnSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_baseline_refresh_24"
        android:enabled="false"
        android:onClick="sincronizarDatos"
        android:padding="10dp"
        android:text="@string/sync" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_baseline_delete_24"
            android:contentDescription="Limpiar"
            app:fabSize="normal"
            android:onClick="limpiarDatos"
            android:gravity="bottom"
            android:layout_margin="20dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDatosBluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:scrollbars="vertical"
            android:marqueeRepeatLimit="marquee_forever"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
